{
  "name": "nocturna-wheel",
  "version": "0.2.0",
  "description": "A JavaScript library for rendering astrological natal charts",
  "type": "module",
  "main": "dist/nocturna-wheel.umd.js",
  "module": "dist/nocturna-wheel.es.js",
  "exports": {
    ".": {
      "import": "./dist/nocturna-wheel.es.js",
      "require": "./dist/nocturna-wheel.umd.js",
      "default": "./dist/nocturna-wheel.umd.js"
    },
    "./utils/*": {
      "import": "./dist/utils/*",
      "default": "./dist/utils/*"
    },
    "./services/*": {
      "import": "./dist/services/*",
      "default": "./dist/services/*"
    },
    "./renderers/*": {
      "import": "./dist/renderers/*",
      "default": "./dist/renderers/*"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "preview": "vite preview",
    "serve": "http-server . -p 8080",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "astrology",
    "natal-chart",
    "zodiac",
    "horoscope",
    "astronomy",
    "svg"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "vite": "^6.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nocturna-wheel.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nocturna-wheel/issues"
  },
  "homepage": "https://github.com/yourusername/nocturna-wheel#readme"
}
